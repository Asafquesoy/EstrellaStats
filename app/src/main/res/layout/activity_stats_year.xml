<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadísticas del año"
            android:textColor="@color/primary_blue"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <!-- Selector de clase -->
        <Spinner
            android:id="@+id/spinnerClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="16dp" />

        <!-- Acumulados anuales -->
        <TextView
            android:id="@+id/textTotalAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asistencia total: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textTotalOnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntualidad total: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textTotalBibles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biblias traídas: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textTotalChapters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capítulos leídos: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textTotalVisits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visitas hechas: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>