<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadísticas del año"
            android:textColor="@color/primary_blue"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <!-- Ejemplo de sección de total acumulado -->
        <TextView
            android:id="@+id/textTotalAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asistencia total: 0"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textTotalOnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personas a tiempo total: 0"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Agrega más métricas según necesites -->

    </LinearLayout>
</ScrollView>