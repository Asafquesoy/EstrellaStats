<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulta por fecha"
        android:textSize="20sp"
        android:textColor="@color/primary_blue"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextQueryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DD/MM/AAAA"
        android:inputType="date"
        android:focusable="false"
        android:padding="8dp"
        android:backgroundTint="@color/primary_blue" />

    <Button
        android:id="@+id/buttonFetch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textDateAttendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asistencia: -"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textDateOnTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personas a tiempo: -"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Más métricas para biblias, capítulos, visitas -->

        </LinearLayout>
    </ScrollView>
</LinearLayout>