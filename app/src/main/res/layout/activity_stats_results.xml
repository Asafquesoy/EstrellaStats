<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultados de estadísticas"
            android:textColor="@color/primary_blue"
            android:textSize="35dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textViewClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clase: -"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"  />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: -"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"  />


        <TextView
            android:id="@+id/textResAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asistencia: -"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textResOnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntualidad: -"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textResBibles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biblias: -"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textResChapters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capítulos leídos: -"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textResVisits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visitas: -"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>